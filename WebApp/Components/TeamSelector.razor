@using WebApp.Models
<div class="card shadow-sm border-0 h-100">
    <div class="card-header bg-white border-bottom py-3">
        <h5 class="mb-0 text-primary fw-bold">
            <i class="bi bi-gear-wide-connected me-2"></i>Gestión de Equipos
        </h5>
    </div>

    <div class="card-body p-4">

        <div class="mb-4">
            <label class="form-label fw-bold text-secondary small text-uppercase">
                <i class="bi bi-search me-1"></i> Consultar Existente
            </label>

            <div class="input-group">
                <span class="input-group-text bg-light border-end-0">
                    <i class="bi bi-people-fill text-muted"></i>
                </span>
                <select class="form-select border-start-0 ps-0" @onchange="OnTeamSelected">
                    <option selected value="">Seleccionar equipo...</option>
                    @if (teamsList == null)
                    {
                        <option disabled>Cargando datos...</option>
                    }
                    else
                    {
                        @foreach (var team in teamsList)
                        {
                            <option value="@team.Id">@team.Name</option>
                        }
                    }
                </select>
            </div>
            <div class="form-text text-muted small mt-1">
                Selecciona un item para cargar sus estadísticas a la derecha.
            </div>
        </div>

        <hr class="my-4 text-muted opacity-25">

        <div>
            <button class="btn btn-outline-primary w-100 py-2" type="button" @onclick="HandleCreateClick">
                <i class="bi bi-plus-lg me-2"></i> Registrar Nuevo Equipo
            </button>
        </div>

    </div>
</div>

@code {
    [Parameter]
    public List<Team>? teamsList { get; set; }

    [Parameter]
    public EventCallback<int> OnTeamIdSelected { get; set; }

    [Parameter] 
    public EventCallback OnCreateRequest { get; set; }
    
    private async Task HandleCreateClick()
    {
        await OnCreateRequest.InvokeAsync();
    }
    
    private async Task OnTeamSelected(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out int teamId))
        {
            await OnTeamIdSelected.InvokeAsync(teamId);
        }
    }
}