@using WebApp.Models
@if (selectedTeam == null)
{
    <div class="alert alert-secondary text-center">
        <i class="bi bi-info-circle"></i>
        <h4>Esperando selección...</h4>
        <p>Por favor selecciona un equipo en el menú lateral para ver su información</p>
    </div>
}
else
{
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <span>
                <i class="bi bi-shield-shaded me-2"></i>Información del Equipo
            </span>
            <span class="badge bg-light text-primary fw-bold">
                @selectedTeam.TeamCode
            </span>
        </div>

        <div class="card-body">
            <h3 class="card-title fw-bold text-dark mb-3">
                @selectedTeam.Name
            </h3>

            <div class="row g-3">

                <div class="col-md-6">
                    <div class="mb-2">
                        <i class="bi bi-geo-alt-fill text-danger me-1"></i>
                        <span class="text-muted">País:</span>
                        <span class="fw-medium">@selectedTeam.Country</span>
                    </div>
                    <div>
                        <i class="bi bi-trophy-fill text-warning me-1"></i>
                        <span class="text-muted">Categoría:</span>
                        <span class="badge rounded-pill bg-info text-dark">
                            @selectedTeam.Category
                        </span>
                    </div>
                </div>

                <div class="col-md-6 border-start border-light ps-md-4">
                    <small class="text-muted d-block">Presupuesto Disponible</small>
                    <div class="d-flex align-items-center text-success">
                        <i class="bi bi-cash-stack fs-4 me-2"></i>
                        <span class="fs-4 fw-bold">
                            $@selectedTeam.Budget.ToString("N0")
                        </span>
                    </div>
                </div>
            </div>

            <hr class="my-4 text-muted opacity-25">

            <div class="d-flex justify-content-end gap-2">
                <button class="btn btn-outline-primary btn-sm d-flex align-items-center gap-2" title="Editar" @onclick="HandleEditClick">
                    <i class="bi bi-pencil-square"></i> Editar
                </button>
                <button class="btn btn-outline-danger btn-sm d-flex align-items-center gap-2" title="Eliminar">
                    <i class="bi bi-trash"></i> Eliminar
                </button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public Team? selectedTeam { get; set; }

    [Parameter] 
    public EventCallback OnEditRequest { get; set; }

    private async Task HandleEditClick()
    {
        await OnEditRequest.InvokeAsync();
    }
}